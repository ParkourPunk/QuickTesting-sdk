{
  "name": "node-ts-barebones",
  "version": "0.0.1",
  "description": "Barebones NodeJS setup with TypeScript, Jest, TSLint and Prettier",
  "author": "Tiago Pina - <tiagoaspina@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "tests": "jest",
    "tests:watch": "jest --watch",
    "tests:cov": "jest --coverage",
    "tests:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "node",
    "typescript",
    "jest",
    "prettier"
  ],
  "dependencies": {
    "@cosmjs/amino": "^0.26.4",
    "@cosmjs/crypto": "^0.26.4",
    "@cosmjs/encoding": "^0.26.4",
    "@cosmjs/proto-signing": "^0.26.4",
    "@cosmjs/stargate": "^0.26.4",
    "@cosmos-client/core": "^0.46.0-rc7",
    "@types/bs58": "^4.0.1",
    "@types/lodash.memoize": "^4.1.7",
    "apisauce": "^2.1.5",
    "base58-js": "^1.0.4",
    "bs58": "^5.0.0",
    "debug": "4.3.1",
    "dotenv": "^6.2.0",
    "grpc": "^1.24.11",
    "lodash.memoize": "4.1.2",
    "pretty-error": "^2.1.1",
    "sovrin-did": "^1.4.0",
    "ts-proto": "^1.110.2",
    "tweetnacl": "^1.0.3",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.6.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "chalk": "^2.4.2",
    "husky": "^1.3.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "nodemon": "^2.0.15",
    "prettier": "^1.15.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^6.1.3",
    "typescript": "^3.2.4"
  },
  "lint-staged": {
    "{src,tests}/**/*.{ts,js,json}": [
      "prettier --config .prettierrc --write './src/**/*.ts'",
      "tslint -p tsconfig.json -c tslint.json",
      "npm run tests",
      "git add"
    ]
  }
}
